module Petrinet2Statechart;

create OUT: statechart from input: petrinet;

rule Transition2HyperEdge {
	from
    	t: petrinet!Transition
    to
	    h:statechart!HyperEdge (
	    	name <- t.name
	    )
}

rule Place2Basic {
	from
		p: petrinet!Place
	to 
		b: statechart!Basic (
			name <- p.name
		)
}
